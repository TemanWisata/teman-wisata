deploymentMode: SingleBinary

loki:
  commonConfig:
    replication_factor: 1

  storage:
    type: s3
    bucketNames:
      chunks: loki-chunks
      ruler: loki-ruler
      admin: loki-admin
      index: loki-index
    s3:
      endpoint: myminio-hl.minio-operator.svc.cluster.local:9000
      access_key_id: minio
      secret_access_key: minio123
      s3forcepathstyle: true
      insecure: true

  schemaConfig:
    configs:
      - from: "2024-04-01"
        store: tsdb
        object_store: s3
        schema: v13
        index:
          prefix: loki_index_
          period: 24h

  limits_config:
    allow_structured_metadata: true
    volume_enabled: true

  ruler:
    enable_api: true

  pattern_ingester:
    enabled: true

  resources:  # hemat untuk kontainer utama
    requests:
      cpu: 50m
      memory: 64Mi
    limits:
      cpu: 100m
      memory: 128Mi

singleBinary:
  replicas: 1
  resources:
    requests:
      cpu: 50m
      memory: 64Mi
    limits:
      cpu: 100m
      memory: 128Mi

chunksCache:
  enabled: true
  memcached:
    args:
      - -m 64  # cache hanya 64MB
    resources:
      requests:
        cpu: 25m
        memory: 64Mi
      limits:
        cpu: 50m
        memory: 128Mi
  persistence:
    enabled: true
    size: 512Mi
    storageClass: local-path

resultsCache:
  enabled: true
  memcached:
    args:
      - -m 64
    resources:
      requests:
        cpu: 25m
        memory: 64Mi
      limits:
        cpu: 50m
        memory: 128Mi
  persistence:
    enabled: true
    size: 512Mi
    storageClass: local-path

# Disable semua mode lain
backend:
  replicas: 0
read:
  replicas: 0
write:
  replicas: 0
ingester:
  replicas: 0
querier:
  replicas: 0
queryFrontend:
  replicas: 0
queryScheduler:
  replicas: 0
distributor:
  replicas: 0
compactor:
  replicas: 0
indexGateway:
  replicas: 0
bloomCompactor:
  replicas: 0
bloomGateway:
  replicas: 0
