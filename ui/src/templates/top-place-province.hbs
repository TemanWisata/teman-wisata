<div x-data='topPlaceProvince()' x-init='init()'>
    <template x-if='loading'>
        <p>Loading...</p>
    </template>
    <template x-if='error'>
        <p x-text='error'></p>
    </template>
    <template x-for='province in provinces.data' :key='province.province'>
        <div id='top-place-province' class='container mx-auto p-8'>
            <h2 class="text-2xl font-bold mb-4" x-text="'Top Place in ' + province.province"></h2>
            <div class="overflow-x-auto p-4">
                <div class="grid grid-flow-col gap-4">
                    <template x-for="place in province.places" :key="place.id">
                        <div>
                            {{> place-card width="w-96"}}
                            <script type="template" x-data>
                                <span x-text="place.id"></span>
                                <span x-text="place.place_name"></span>
                                <span x-text="place.province"></span>
                                <span x-text="place.avg_rating ? place.avg_rating.toFixed(2) : '0.00'"></span>
                                <span x-text="place.category"></span>
                                <span x-text="place.description"></span>
                            </script>
                        </div>
                    </template>
                </div>
            </div>
        </div>

    </template>
</div>
